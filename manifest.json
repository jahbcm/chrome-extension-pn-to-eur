{
  "manifest_version": 3,
  "name": "PLN to EUR Converter",
  "version": "1.0",
  "description": "Converts PLN amounts to EUR on the page.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab", 
    "storage"
  ],
  "host_permissions": [
    "https://api.frankfurter.app/"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["converter.js", "content.js"]
    }
  ]
}

